MODULE main
VAR
    location: {r1, r2, r3, r4, r5};
    lastday: {r1, r2};
    lastnight: {r3, r4};
    context: {day, night};
    person: boolean;
    greet: boolean;
    context_time: 0..3;

ASSIGN
  init(location) := r1;
  init(lastday) := r1;
  init(lastnight) := r4;
  init(context) := day;
  init(context_time) := 0;
  next(context) := case
                (context = day) & (context_time > 2): {night, day};
                (context = night) & (context_time > 2): {day, night};
                TRUE: context;
                 esac;
  next(context_time) := case
                (location = r5) : 1;
                (context_time < 3): context_time+1;
                TRUE: context_time;
                 esac;
  next(location) := case
                (location = r1) & (context = day): r2;
                (location = r2) & (context = day): r1;
                (location = r3) & (context = night): r4;
                (location = r4) & (context = night): r3;
                (location = r1) & (context = night): r5;
                (location = r2) & (context = night): r5;
                (location = r3) & (context = day): r5;
                (location = r4) & (context = day): r5;
                (location = r5) & (context = night) & (lastnight = r3): r4;
                (location = r5) & (context = night) & (lastnight = r4): r3;
                (location = r5) & (context = day) & (lastday = r1): r2;
                (location = r5) & (context = day) & (lastday = r2): r1;
                 esac;
  next(lastnight) := case
                (location = r3) : r3;
                (location = r4) : r4;
                TRUE : lastnight;
                 esac;
  next(lastday) := case
                (location = r1) : r1;
                (location = r2) : r2;
                TRUE : lastday;
                 esac;
  next(greet) := case
                (person = TRUE) : TRUE;
                (person = FALSE) : FALSE;
                 esac;



